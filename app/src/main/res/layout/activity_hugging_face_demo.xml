<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter a Hugging Face model repo and optional file name."
            android:textSize="16sp"
            android:paddingBottom="12dp" />

        <EditText
            android:id="@+id/inputModelId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Model repo (e.g. TheBloke/TinyLlama-1.1B-Chat-v1.0-GGUF)"
            android:inputType="textUri"
            android:text="TheBloke/TinyLlama-1.1B-Chat-v1.0-GGUF" />

        <EditText
            android:id="@+id/inputRevision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Revision (default: main)"
            android:inputType="text"
            android:text="main" />

        <EditText
            android:id="@+id/inputFilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Optional file preference (e.g. Q4_K_M.gguf)"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/checkboxForceDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Force re-download even if cached" />

        <Button
            android:id="@+id/btnDownloadAndRun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Download &amp; Run"
            android:enabled="true" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status: idle"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="12dp"
            android:background="#EEEEEE" />

    </LinearLayout>
</ScrollView>
